# =============================================================================
# Forapply Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env or .env.local to version control!

# =============================================================================
# Backend (Server-side only - KEEP SECRET)
# =============================================================================

# Anthropic API Key - Get one at https://console.anthropic.com/
# This key is used server-side only and never exposed to the browser
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Server port (optional, defaults to 3001)
PORT=3001

# Allowed origins for CORS (comma-separated). In production, set to your frontend URL(s).
# CORS_ORIGIN is still supported for backward compatibility.
ALLOWED_ORIGINS=http://localhost:5173

# Supabase JWT secret (used to verify access tokens server-side)
# Find in Supabase Project Settings > API > JWT Secret
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# Optional: override request rate limit per IP (defaults to 10 per minute)
# RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# Frontend (Client-side - these will be visible in browser)
# =============================================================================

# Supabase credentials for authentication
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# API URL (optional - defaults to /api which uses Vite proxy in development)
# In production, set this to your backend server URL
# VITE_API_URL=https://your-backend-server.com/api
